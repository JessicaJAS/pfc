                            {
                                $("#dialogResult").html("Atualizado com sucesso");
                                $("#dialogResult").dialog({
                                    autoOpen: true,
                                    buttons: [
                                        {
                                            text: "Ok",
                                            click: function() {
                                                $( this ).dialog( "close" );
                                            }
                                        }
                                    ]
                                });
                            }else
                            {
                                $("#dialogResult").html(data);
