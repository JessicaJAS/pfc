<script>
$(function() {    
    $('#form_usuarios').submitForm({
    	'reload' : true
    });
    
    $('.tree').tree({
        collapseUiIcon: 'ui-icon-plus',
        expandUiIcon: 'ui-icon-minus',
        leafUiIcon: 'ui-icon-bullet'
    });
            
    $('.checkAll').click(function(){
        $('.tree').tree('checkAll');
        return false;
    });

    $('.uncheckAll').click(function(){
        $('.tree').tree('uncheckAll');
        return false;
    });
    //atualiza o nome dos módulos, submodulos, paginas e ações
    var valueAnt = '';
    $('#form_modulos input[type=text]').on('focusin',function(event) {
        valueAnt = $(this).val();
    });

    $('#form_modulos input[type=text]').on('focusout',function(event) {
        var input = $(this);
        if(valueAnt != $(this).val())
        {
            var id = $(this).attr('id');
            var campo = $(this).attr('campo');
            var tipo = $(this).attr('tipo');
            var valor = $(this).val();
            $.post('<?=URL?>configuracoes/modulos/home/atualizar',{tipo:tipo, id:id, campo:campo, valor:valor},function(data){
                if(data)
                {
                    input.after('<span class="glyphicon glyphicon-ok form-control-feedback" aria-hidden="true"></span>');
                    setTimeout(function(){
                        $('.form-control-feedback').remove();
                    },2000);
                }
            })
        }
    });

    //atualiza o status geral
    $('#form_modulos input[name=status]').on('change',function(event) {
        var input = $(this);
        var id = $(this).attr('id');
        var campo = $(this).attr('campo');
        var tipo = $(this).attr('tipo');
        var valor = $(this).val();

        if($(this).is(':checked'))
            valor = 'Ativo';
        else
            valor = 'Inativo';

        $.post('<?=URL?>configuracoes/modulos/home/atualizar',{tipo:tipo, id:id, campo:campo, valor:valor},function(data){
            if(data)
            {
                input.after('<span class="glyphicon glyphicon-ok form-control-feedback" aria-hidden="true"></span>');
                setTimeout(function(){
                    $('.form-control-feedback').remove();
                },2000);
            }
        });
    });


    //atualiza o status geral
    $('#form_modulos select[name=status]').on('change',function(event) {
        var input = $(this);
        var id = $(this).attr('id');
        var campo = $(this).attr('campo');
        var tipo = $(this).attr('tipo');
        var valor = $(this).val();



        $.post('<?=URL?>configuracoes/modulos/home/atualizar',{tipo:tipo, id:id, campo:campo, valor:valor},function(data){
